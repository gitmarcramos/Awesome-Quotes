<h1>LOG IN</h1>

<form method="post" action="/auth/login" class="form">
    {{> flashMessage }}

    <label for="email">email</label>
    <input class="input" type="email" id="email" name="email" value="test@email.com">
    <label for="password">password</label>
    <input class="input" type="password" id="password" name="password" value="12345">
    <button class="btn">signin</button>
</form>

<span class="suggestion-modal"> Don't have an account yet ? </span>
<a href="/auth/creat-account" class="links"> Create an account</a>